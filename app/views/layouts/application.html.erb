<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <% if signed_in? -%>
      <%= button_to "Sign out", sign_out_path, :method => :delete %>
    <% else -%>
      <%= button_to "Sign in", sign_in_path, :method => :get %>
    <% end -%>
  </div>
  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>
